<Screen1>:
    BoxLayout:
        padding: '8sp'
        orientation: 'vertical'
        MDLabel:
            text: 'Отдохните и измерьте пульс 15 сек.'
        MDTextField:
            id: p1_field
            hint_text: "Введите пульс"
        MDRaisedButton:
            text: 'Далее'
            font_size: '40sp'
            size_hint: 0.5, None
            pos_hint: {'center_x': 0.5}
            on_press:
                root.move_next()
                app.sm.transition.direction = "left"
                app.sm.current = "Screen2"

